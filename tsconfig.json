{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2019", "esnext.asynciterable", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Experimental Options */
    "experimentalDecorators": true
  }
}
